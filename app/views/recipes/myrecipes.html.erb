<h1 class="text-center mt-4">Recipes</h1>

<div class="flickr_pagination">
  <%= will_paginate @recipes, :container => false %>    
    <div class="row row-cols-1 row-cols-md-3 g-4 m-auto">
        <% @recipes.each do |recipe| %>
            <div class="col">
                <div class="card h-100 bg-dark ">
                    <%= image_tag "dummy.png", class: "card-img-top" %>
                    <div class="card-body text-light" >
                            <h4 class="card-title "> <%= recipe.recipe_name %> </h4>
                            <div style="display: flex; justify-content: flex-end;">
                                <%= link_to 'View', recipe_path(recipe), class: "btn btn-success float-right", style: "margin-right: 5%;" %>
                                <%= link_to 'Edit', edit_recipe_path(recipe), class: "btn btn-warning float-right", style: "margin-right: 5%;" %>
                                <%= button_to 'Delete', recipe_path(recipe), method: :delete, class: "btn btn-danger float-right" %>
                            </div>
                    </div>
                </div>
            </div>
        <%  end %>
    </div>
</div>

