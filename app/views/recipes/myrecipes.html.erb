<h1 class="text-center mt-4">Recipes</h1>

<div class="flickr_pagination">
  <%= will_paginate @recipes, :container => false %>    
    <div class="row row-cols-1 row-cols-md-3 g-4 m-4">
        <% if @recipes.any? %>
            <% @recipes.each do |recipe| %>
                <div class="col">
                    <div class="card h-100 bg-dark ">
                        <%= image_tag (recipe.image.attached? ? recipe.image.variant(resize_to_fill: [250, 200]) : "dummy.png"), class: "card-img-top" %>
                        <div class="card-body text-light" >
                                <h4 class="card-title "> <%= recipe.recipe_name.titleize %> </h4>
                                <div style="display: flex; justify-content: flex-end;">
                                    <%= button_to 'View', recipe_path(recipe), method: :get, class: "btn btn-success float-right m-auto", style: "margin-right: 5%;" %>&nbsp &nbsp
                                    <%= button_to 'Edit', edit_recipe_path(recipe), method: :get, class: "btn btn-warning float-right", style: "margin-right: 5%;" %>&nbsp &nbsp
                                    <%= button_to 'Delete', recipe_path(recipe), method: :delete, class: "btn btn-danger float-right" %>
                                </div>
                                <div class="card-body text-light" style="display: flex; justify-content: space-between;"> 
                                    <h6 class="card-title w-50"><%=recipe.cuisine.titleize%></h6>
                                    <h6 class="card-title float-right text-right"><%=recipe.kind.titleize%></h6>
                                </div>
                        </div>
                    </div>
                </div>
            <%  end %>
        <% else %>
            <div class="col">
                <div class="card h-100 bg-dark ">
                    <%= image_tag "dummy.png", class: "card-img-top" %>
                    <div class="card-body text-light" style="display: flex; justify-content: space-between;" >
                            <h4 class="card-title"> You haven't posted any recipes yet</h4>
                    </div>
                </div>
            </div>
        <% end %>
    </div>
</div>

