<div class="container">
  <div class="row">
    <div class="col-lg-6 col-md-6 col-sm-12">
      <h2><%= @recipe.recipe_name %></h2>
      <%= image_tag "dummy.png" %>
    </div>
    <div class="col-lg-6 col-md-6 col-sm-12">
      <h4>Ingredients</h4>
        <table class = "table" >
            <thead>
                <tr>
                    <th> Ingredient </th>
                    <th> Quantity </th>
                </tr>
            </thead>
            <tbody>
                <% @recipe_ingredients.each do |item| %>
                    <tr>
                        <td> <%= item.ingredient.ingredient_name %> </td>
                        <td> <%= item.quantity %> </td>
                    </tr>
                <% end %>
            </tbody>
        </table>
    </div>
  </div>

  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
      <h4>Directions</h4>
      <ol>
        <% @steps.each do |step| %>
          <li><%= step.direction %></li>
        <% end %>
      </ol>
    </div>
  </div>
  <br>
  <div class="row">
    <div class="col-lg-12 col-md-12 col-sm-12">
        <%= link_to 'Back', :back , class: "btn btn-warning float-left " %>
    </div>
  </div>
</div>