<div class="bodycon">
    <main class="form-signin w-100 m-auto bg-dark text-white rounded">
        <h1 class="h3 mb-3 fw-normal">Log In</h1>
        <%= bootstrap_form_with(scope: :login, url: login_path, local: true) do |f| %>
            <%= f.email_field :email %>
            <%= f.password_field :password %>
            <%= link_to 'Forgot password?', 'password/forgot' %>
            <br>
            <%= f.submit "Log In" %>
        <% end %>

    </main>
</div>